extends layout
block content

  body
    block content
      .container
        form.form-signin(action="/registerAdmin", method="post")
          h2.form-signin-heading Registration
          p(style='color:red;')= error
          input.input-block-level(type="text", name="username", placeholder="Username")
          input.input-block-level(type="password", name="password", placeholder="Password")
          input.input-block-level(type="password", name="passwordConfirm", placeholder="Confirm Password")
          button.btn.btn-large.btn-primary(type="submit") Register