extends layout
block content
  .container
    h2 Banned Users
    .success
    .error
    table.table
      tbody
        tr
          th User ID
          th Action
        if data.length
         each item in data
            if item['Ban_Status']
              tr(id='#{item["_id"]}')
                td #{item['_id']}
                td
                   a(href='/unbanUser?user_id=#{item["_id"]}', onclick='return confirm("You are going to unban this user. Continue?")') Unban