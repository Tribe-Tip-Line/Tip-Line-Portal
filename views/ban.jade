extends layout
block content
  .container
    h2 Banned Users
      span(class='clickableIcon')
        i(class="fas fa-info-circle", data-toggle="modal", data-target="#informationModal")
    .success
    .error
    table.table
      tbody
        tr
          th User ID
          th Action
        if data.length
         each item in data
            if item['Ban_Status']
              tr(id='#{item["_id"]}')
                td #{item['_id']}
                td
                   a(href='/unbanUser?user_id=#{item["_id"]}', onclick='return confirm("You are going to unban this user. Continue?")') Unban
    div(id="informationModal", class='modal fade', tabindex="-1", role='dialog', aria-labelledby="exampleModalLabel", aria-hidden="true")
      div(class='modal-dialog modal-xl' role='document')
        div(class='modal-content')
          div(class='modal-header')
            button(type='button' class='close' data-dismiss='modal') &times;
            h3(class='modal-title') Report Page Information
          div(class='modal-body')
            p In this page you can see a list of banned users and be able to unban them if you see fit.
          div(class='modal-footer')
            button(type='button' class='btn btn-default' data-dismiss='modal') Close
